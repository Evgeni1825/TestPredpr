@model WebApp.Models.Predpr.SelectedFactory
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Поиск предприятия</h1>
</div>


<form asp-controller="Home" asp-action="Search">
    <div class="form-group">
        <label class="control-label">Наименование юридического лица/фамилия, имя, отчество индивидуального предпринимателя</label>
        <input type="text" asp-for="Vnaim" class="form-control" />
        <span asp-validation-for="Vnaim"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Поиск" class="btn btn-default" />
    </div>

</form>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
